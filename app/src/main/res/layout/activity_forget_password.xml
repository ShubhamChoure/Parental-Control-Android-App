<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Login.ParentForgetPassword"
    android:orientation="vertical"
    android:background="#F3F3F3">

    <ImageView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_height="350dp"
        android:src="@drawable/forgetpassword">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="15dp"
        android:text="Forgot "
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage">
    </TextView>
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="15dp"
        android:text="Password? "
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Donâ€™t worry ! It happens. Please enter the email ID we will send the email in your email account.">
    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/black">
    <com.google.android.material.textfield.TextInputEditText
        android:textStyle="bold"
        android:id="@+id/ForgetMailETxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/editbutton"
        android:drawableLeft="@drawable/baseline_contact_mail_24"
        android:hint="  Enter Email ID"
        android:padding="20dp"
        android:textColor="@color/black"
        tools:ignore="InefficientWeight">
    </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_gravity="center"
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_desing"
        android:padding="15dp"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:ignore="HardcodedText,SpUsage">
    </Button>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:lottie_rawRes="@raw/button_loading_animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone"
        android:id="@+id/btnLoading">
    </com.airbnb.lottie.LottieAnimationView>
</LinearLayout>