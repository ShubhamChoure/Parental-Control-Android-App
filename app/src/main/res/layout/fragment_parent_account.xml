<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="BottomNavigation.ParentNavigation.ParentAccount">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#F3F3F3">
   <androidx.appcompat.widget.Toolbar
       android:layout_width="match_parent"
       android:layout_height="?actionBarSize"
       android:background="#8934BD"
       android:padding="5dp"
       app:title="Account Info"
       android:id="@+id/parentAccountToolbar"
       app:titleTextColor="#FFFFFF"
       android:textAlignment="center"
       android:textSize="20dp"
       android:textStyle="bold"
       app:menu="@menu/option_parent_account"/>

       <androidx.cardview.widget.CardView
           android:layout_marginTop="35dp"
           android:layout_width="150dp"
           android:layout_height="150dp"
           app:cardCornerRadius="250dp"
           android:layout_gravity="center">

           <ImageView
               android:id="@+id/profilePicParentIV"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:scaleType="centerCrop"
               android:src="@drawable/accoutntimg" />
       </androidx.cardview.widget.CardView>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginBottom="10dp">

           <TextView
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp"
               android:id="@+id/parentACName"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text="Account Holder Name"
               android:textSize="20sp"
               android:textStyle="bold">
           </TextView>
       </LinearLayout>

       <LinearLayout
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Mail Address : "/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Example@gmail.com"
               android:id="@+id/mailParentACTV"/>
       </LinearLayout>
       <LinearLayout
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Mobile No : "/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="+91 XXXXXXXXXX"
               android:id="@+id/mobileNoParentACTV"/>
       </LinearLayout>
       <LinearLayout
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Blood Group : "/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="B"
               android:id="@+id/bloodParentACTV"/>
       </LinearLayout>
       <LinearLayout
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Child Mail Address : "/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Example@gmail.com"
               android:id="@+id/childMailParentACTV"/>
       </LinearLayout>

       <LinearLayout
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="10dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Child Name : "/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Child Name"
               android:id="@+id/childNameParentACTV"/>
       </LinearLayout>

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/ParentLogOut"
          android:text="Log Out"
          android:layout_marginTop="20dp"
          android:gravity="center"
          android:layout_gravity="center">
      </Button>
   </LinearLayout>
</FrameLayout>